<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview_linear_rectangle"
    tools:context=".activities.AddChefActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chefImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/man"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext_rectangle"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/chefImg">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:inputType="text"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="@string/name"
            android:layout_marginStart="10dp"
            style="@style/EditTextNoUnderline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:inputType="phone"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:hint="@string/mobile_no"
            android:layout_marginStart="10dp"
            style="@style/EditTextNoUnderline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="@string/email"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            style="@style/EditTextNoUnderline"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:inputType="textPostalAddress"
            android:drawableStart="@drawable/baseline_location_24"
            android:drawablePadding="10dp"
            android:hint="@string/address"
            android:layout_marginStart="10dp"
            style="@style/EditTextNoUnderline"/>

    </LinearLayout>
    <Button
        android:id="@+id/addChef"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_rectangle"
        android:text="@string/add_chef"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>